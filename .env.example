# HoneyNet Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database
DATABASE_URL=postgresql://honeynet:password@localhost/honeynet
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# HoneyNet Specific
HONEYPOT_ENABLED=true
MAX_HONEYPOTS_PER_CLIENT=50
THREAT_ANALYSIS_ENABLED=true
GLOBAL_SHARING_ENABLED=true

# AI/ML Settings
THREAT_DETECTION_THRESHOLD=0.75
LEARNING_RATE=0.001
BATCH_SIZE=32

# Network
MAX_CONNECTIONS=1000
HEARTBEAT_INTERVAL=30
SYNC_INTERVAL=300

# Business Tiers
FREE_TIER_MAX_DEVICES=3
PRO_TIER_MAX_DEVICES=50
ENTERPRISE_TIER_MAX_DEVICES=-1
